{
  "compilerOptions": {
    "useUnknownInCatchVariables": false,
    "resolveJsonModule": true,
    "target": "es2021",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "strictPropertyInitialization": false,
    "typeRoots": ["./node_modules/@types", "./src/@types"],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "@resources/*": ["resources/*"],
      "@configs/*": ["configs/*"],
      "@lib/*": ["lib/*"],
      "@infra/*": ["infra/*"]
    }
  },
  "includes": ["./src/**/*"],
  "exclude": ["jest.config.ts", "jest-setup-file.ts", "ormconfig.ts"]
}
